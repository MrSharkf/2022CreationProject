/* components/searchbar/searchbar.wxss */
.searchbar {
  height: 88rpx;
  padding: 20rpx 20rpx;
  display: flex;
}
.content {
  height: 88rpx;
  padding: 0 18rpx;
  background: rgba(255,255,255,1);
  border-radius: 16rpx;
  border: 2rpx solid rgba(220,222,226,1);
  flex: 1;
  display: flex;
  align-items: center;
  width: 500rpx;
}
.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -4rpx;
}
.input {
  flex: 1;
  margin: 0 20rpx;
}
.delete-icon {
  width: 30rpx;
  height: 30rpx;
}
.text-btn {
  margin-left: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.5);
}
