/* pages/profile/profile.wxss */
.profileInput
{
width: 85%;
height: 40px;
border: 1px solid #A9A9A9;
border-radius: 8px;
margin-top: 10px;
}

.profileView
{
  
  margin-top: 30px;
}

.title
{
  width:100%;
  height: 120px;
  background-color: #D6D0AE;
  text-align:center;
}

.titleText
{
  font-size: 20px;
  color: rgb(255, 255, 255);
}

.head
{
  box-sizing: border-box;
  border-radius: 100%;
  position: absolute;
  width: 142px;
  height: 142px;
  left: 50%;
  top: 50px;
  transform: translate(-50%);
  background-color: burlywood;
  border: 5px solid #FFFFFF;
}
.user-info-container {
  display: flex;
  align-items: flex-end;
  margin-left: 33%;
  margin-top: 32rpx;
}

.user-info-container .avatar {
  width: 100rpx;
  height: 100rpx;
  border: 5rpx solid white;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(25, 118, 210, 0.1);
}
.info {
  margin-left: 33%;
  color: black;
  font-weight: bold;
  font-size: 36rpx;
}

.info > .name {
  color: #1976d2;
  font-weight: bold;
  font-size: inherit;
}
.authorize {
  display: inline-block;
  box-sizing: border-box;
  width: 25%;
  padding: 10rpx 36rpx;
  border-radius: 36rpx;
  background-color: #ffee58;
  color: black;
  text-align: center;
  font-weight: bold;
  font-size: 26rpx;
  line-height: 28rpx;
}
.tableContainer
{
  margin-top: 50rpx;
  margin-left: 100rpx;
}

.login{
  margin-top: 60rpx;
  margin-left: 80rpx;
}

.pickerdate{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 85%;
  height: 40px;
  border: 1px solid #A9A9A9;
  border-radius: 8px;
  margin-top: 10px;
}

.radio{
  margin-top: 10px;
}
.sex{
  margin-left: 20px;
}