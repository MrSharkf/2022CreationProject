.profileInput
{
width: 85%;
height: 40px;
border: 1px solid #A9A9A9;
border-radius: 8px;
margin-top: 10px;
}

.profileView
{
  
  margin-top: 30px;
}

.title
{
  width:100%;
  height: 120px;
  background-color: #D6D0AE;
  text-align:center;
}

.titleText
{
  font-size: 20px;
  color: rgb(255, 255, 255);
}
.infobox
{
  box-sizing: border-box;
  border-radius: 100%;
  position:absolute;
  width: 142px;
  height: 142px;
  left: 50%;
  top: 50px;
}
.infobox >.head
{
  box-sizing: border-box;
  border-radius: 100%;
  position: absolute;
  width: 142px;
  height: 142px;
  transform: translate(-50%);
  background-color: burlywood;
  border: 5px solid #FFFFFF;
}
.infobox > .avatar
{
  box-sizing: border-box;
  border-radius: 100%;
  position: absolute;
  width: 142px;
  height: 142px;

  transform: translate(-50%);
  background-color: burlywood;
  border: 5px solid #FFFFFF;
}


