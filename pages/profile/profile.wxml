<!--pages/profile/profile.wxml-->
<view class="title">
    <view class="titleText">个人信息</view>
</view>
<view class="head">
</view>

<view class="tableContainer">
  <view class="profileView">
    <view>宝宝昵称</view>
    <input class="profileInput"/>
</view>
<view class="profileView">
    <view>出生日期</view>
    <picker name="pickerdate" class="pickerdate" mode="date" value="{{date}}" start="1900-01-01"
      end="2022-7-16" bindchange="bindDataChange">   {{date}}
      </picker>
</view>

<view class="profileView">
    <view>性别</view>
    <radio-group class="radio">
      <radio>男</radio>
      <radio class="sex">女</radio>
    </radio-group>
</view>

<view class="profileView">
    <view>身高（cm）</view>
    <input class="profileInput"/>
</view>
<view class="profileView">
    <view>体重（kg）</view>
    <input class="profileInput"/>
</view>
</view>

<button bindtap="register" class="login">注册</button>
