          <navigator class="goods_item_n">
          <button class="mine-nouserinfo-avatar"bindgetuserinfo="bindGetUserInfo" style="background-image:url(../../icons/Vector.png);"></button>
            <!--容器 -->
            <view class="goods_item">
              <image class="goods_img1_wrap" mode="widthFix" src="https://s6.jpg.cm/2022/07/04/PW6CwS.png"></image></view>
              <view class="goods_info1_wrap">name</view>
              <view class="goods_info2_wrap">yingyangsu</view>
          </navigator>
          </view>
