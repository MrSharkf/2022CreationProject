            <view class="goods_item">
              <image class="goods_img1_wrap" mode="widthFix" src="https://t7.baidu.com/it/u=1595072465,3644073269&fm=193&f=GIF"></image></view>
              <view class="goods_info1_wrap">name</view>
              <view class="goods_info2_wrap">yingyangsu</view>
